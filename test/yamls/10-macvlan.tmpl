{
  "name": "macvlan-net",
  "cniVersion": "0.3.1",
  "plugins": [
    {
      "type": "macvlan",
      "mode": "bridge",
      "master": "eth0",
      "ipam": {
           {%- if type == "whereabouts" %}
                {%- if ip_family == "ipv4" %}
                   "range": "172.20.0.0/16",
                   "exclude": [ "172.20.0.1/32" ],
                   "gateway": "172.20.0.1",
                   "routes": [ { "dst": "0.0.0.0/0" }],
               {%- elif ip_family == "ipv6" %}
                    "range": "fd01::/48",
                    "exclude": [ "fd01::1/128" ],
                    "gateway": "fd01::1",
                    "routes": [{ "dst": "0.0.0.0/0" }],
               {%- else %}
                   "range": "172.20.0.0/16",
                   "exclude": [ "172.20.0.1/32" ],
                   "gateway": "172.20.0.1",
                   "addresses": [
                      {
                        "address": "172.19.0.100/16",
                        "gateway": "172.19.0.1"
                      },
                      {
                        "address": "172.19.0.101/16",
                        "gateway": "172.19.0.1"
                      },
                      {
                        "address": "172.19.0.102/16",
                        "gateway": "172.19.0.1"
                      },
                      {
                        "address": "fd01::100/48",
                        "gateway": "fd01::1"
                      },
                      {
                        "address": "fd01::101/48",
                        "gateway": "fd01::1"
                      },
                      {
                        "address": "fd01::102/48",
                        "gateway": "fd01::1"
                      }],
                   "routes": [ { "dst": "0.0.0.0/0" }],
               {%- endif %}
                   "type": "{{ type }}",
                   "log_level": "debug",
                   "log_file": "/var/log/{{ type }}.log"
           {%- else %}
                    "type": "{{ type }}",
                    "log_level" : "DEBUG",
                    "log_file_path" : "/tmp/cni.log",
                    "log_file_max_size" : 100,
                    "log_file_max_age": 30,
                    "log_file_max_count": 10,
                    "ipam_unix_socket_path": "/var/run/spidernet/spiderpool.sock"
           {%- endif %}
       }
    }
  ]
}